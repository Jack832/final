<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:colorPrimary">@color/primaryColor</item>
    </style>

    <style name="NewTheme" parent="Base.ThemeOverlay.AppCompat.Light">

    </style>

    <style name="AppTheme.CustomTheme">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowCloseOnTouchOutside">true</item>
    </style>

    <style name="contact" parent="Theme.AppCompat.Light.NoActionBar">
    </style>

    <style name="AppThemes" parent="AppTheme">
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:statusBarColor">@color/colorHighLight</item>
        <item name="actionButtonStyle">@style/MyActionButtonStyle</item>
        <item name="android:actionButtonStyle">@style/MyActionButtonStyle</item>
    </style>

    <style name="MyActionButtonStyle" parent="AppTheme">    <!--<item name="android:minWidth">50dp</item>-->
        <item name="android:padding">30dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:paddingLeft">0dp</item></style>


    <style name="FontTheme" parent="AppTheme">
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textStyle">italic</item>
    </style>

    <style name="MediaTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:colorPrimary">@color/primaryColor</item>
    </style>
    <style name="Temp" parent="Theme.AppCompat.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="collapse" parent="@style/TextAppearance.AppCompat.Medium">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">#391</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="expand" parent="@style/TextAppearance.AppCompat.Medium">
    <item name="android:textSize">18sp</item>
    <item name="android:textColor">#397</item>
    <item name="android:textStyle">bold</item></style>
</resources>
